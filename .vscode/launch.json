  "version": "0.2.0",
  "configurations": [
    // Server
    {
      "name": "Server: Launch via Yarn",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "console": "integratedTerminal",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["start:debug"]
    },
    {
      "name": "Server: Launch Unit Tests via Yarn",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "console": "integratedTerminal",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["test"]
    },
    {
      "name": "Server: Launch Integration Tests via Yarn",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "console": "integratedTerminal",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["test:int"]
    },
    {
      "name": "Server: Launch All Tests via Yarn",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/server",
      "console": "integratedTerminal",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["test:all"]
    },

    // Web
    {
      "name": "Web: Launch via Yarn",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/web",
      "console": "integratedTerminal",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["dev"]
    }
  ]
}
