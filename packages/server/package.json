{
  "name": "the-one-playlist-server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nodemon",
    "start:debug": "nodemon --debug",
    "start:prod": "node dist/main",
    "lint": "eslint --max-warnings=0 \"src/**/*.ts\"",
    "lint:fix": "eslint --max-warnings=0 --fix \"src/**/*.ts\"",
    "test:clear": "rimraf coverage && jest --clearCache",
    "test": "jest",
    "test:base": "yarn test --runInBand",
    "test:int": "yarn test:base --config jest-int.config.js",
    "test:all": "yarn test:base --config jest-all.config.js",
    "test:watch": "yarn test --watch",
    "test:watch:int": "yarn test:int --watch",
    "test:watch:all": "yarn test:all --watch",
    "test:cov": "yarn test --coverage",
    "test:cov:int": "yarn test:int --coverage",
    "test:cov:all": "yarn test:all --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:debug:base": "yarn test:debug",
    "test:int:debug": "yarn test:debug:base --config jest-int.config.js",
    "test:all:debug": "yarn test:debug:base --config jest-all.config.js",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.7",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.7",
    "@nestjs/platform-express": "^9.0.7",
    "@nestjs/swagger": "^6.0.4",
    "axios": "^0.27.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "qs": "^6.11.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^9.0.7",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/google-apps-script": "^1.0.55",
    "@types/jest": "27.5.0",
    "@types/node": "^16.0.0",
    "@types/spotify-api": "^0.0.17",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^3.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "28.0.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5",
    "webpack": "^5.74.0"
  }
}
